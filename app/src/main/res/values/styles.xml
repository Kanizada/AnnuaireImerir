<resources>

    <!-- Base application theme. -->
    <style nom="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item nom="colorPrimary">@color/colorPrimary</item>
        <item nom="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item nom="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style nom="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item nom="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style nom="ToolbarCustom" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item nom="titleTextColor">@android:color/white</item>
        <item nom="colorControlNormal">@android:color/white</item>
    </style>

    <style nom="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style nom="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
